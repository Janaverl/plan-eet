    </div>
    {# <button class="w3-button w3-light-grey w3-section addSearchFields">Voeg extra zoekvelden toe <i class="fas fa-plus-square"></i></button> #}
{% endblock %}

{% block show_all_names %}
    <div class="w3-card step">
        <h3>Deze waarden zitten al in de database:</h3>
        <input type="text" class="w3-input filterBy" placeholder="zoek een {{name}} ...">
        <div class="scrollbox">
            <ul class="w3-ul">
                {% for value in values %}
                    <li>{{value.name}}</li>
                {% endfor %}
            </ul>
        </div>
    </div>
{% endblock %}

{% block table_all_recipes %}
    <table class="w3-table w3-striped w3-bordered" id="allRecipes" width="100%">
        <thead>
        <tr class="sortTitles">
            {% if app.request.get('_route') == 'add_meal' %}
                <th width="10%"></th>
            {% endif %}
            <th class="sortable" width="30%">naam recept</th>
            <th class="sortable" width="12%">categorie</th>
            <th class="sortable" width="12%">type</th>
            <th width="20%">ingredienten</th>
            <th width="16%">kruiden</th>
            {% if app.request.get('_route') == 'show_recipes' %}
                <th width="10%"></th>
            {% endif %}
        </tr>
        </thead>
        <tbody class="searchable">
        {% for recipe in recipes %}
            <tr class="onerecipe recipe{{recipe.id}}">
                {% if app.request.get('_route') == 'add_meal' %}
                    <td>                        
                        <input class="w3-check recipe" type="checkbox" name="recipe" value="recipe{{recipe.id}}"/>
                    </td>
                {% endif %}
                <td>
                    {{recipe.name}}
                    <br>
                    <span><i>{{recipe.suggestion}}</i></span>
                    <br>
                    <button onclick="document.getElementById('details{{recipe.name}}').style.display='block'"class="w3-button">bekijk recept</button>
                    <div id="details{{recipe.name}}" class="w3-modal">
                        <div class="w3-modal-content">
                            <div class="w3-container">
                            <span onclick="document.getElementById('details{{recipe.name}}').style.display='none'"
                            class="w3-button w3-display-topright">&times;</span>
                            <p>ingredienten(voor {{nrOfEaters}} personen)</p>
                            <ul>
                                {% for ingr in recipe.ingredients %}
                                    <li>{{ingr.quantity*nrOfEaters}} {{ingr.ingredient.unit.name}} {{ingr.ingredient.name}}</li>
                                {% endfor %}
                            </ul>
                            <p>bereidingswijze</p>
                            <p>{{recipe.instructions|nl2br}}</p>
                            </div>
                        </div>
                    </div>
                </td>
                <td>{{recipe.category.name}}</td>
                <td>{{recipe.type.name}}</td>
                <td>
                    {% for ingr in recipe.ingredients %}
                        {% if loop.last %}
                            {{ingr.ingredient.name}}
                        {% else %}
                            {{ingr.ingredient.name}},
                        {% endif %}
                    {% endfor %}
                </td>
                <td>
                    {% for herb in recipe.recipeHerb %}
                        {% if loop.last %}
                            {{herb.herb.name}}
                        {% else %}
                            {{herb.herb.name}},
                        {% endif %}
                    {% endfor %}
                </td>
                {% if app.request.get('_route') == 'show_recipes' %}
                    <td class="change">
                        {% if is_granted('ROLE_ADMIN') %}
                            <p><a href="{{ path('update_recipe', {slug: recipe.name}) }}"><i class="fas fa-pencil-alt"></i></a></p>
                        {% endif %}
                        <a href="{{ path('show_recipe', {slug: recipe.name}) }}"><i class="fas fa-eye"></i></a>
                    </td>
                {% endif %}
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
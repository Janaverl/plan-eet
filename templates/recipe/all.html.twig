{% extends 'boxes.html.twig' %}

{% use 'blocks.html.twig'%}

{% block body %}
    <div class="contentwrapper">
        <h1>bekijk alle recepten</h1>
        
        <div class="cardwrapper">
            <div class="w3-card step">
                {% block filtertable %}
                    {{ parent() }}
                {% endblock %}
                <table class="w3-table w3-striped w3-bordered" id="allIngredients" width="100%">
                  <thead>
                    <tr class="sortTitles">
                        <th class="sortable">naam recept</th>
                        <th class="sortable">categorie</th>
                        <th class="sortable">type</th>
                        <th>ingredienten</th>
                        <th>kruiden</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody class="searchable">
                    {% for value in values %}
                        <tr>
                            <td>{{value.name}}</td>
                            <td>{{value.category.name}}</td>
                            <td>{{value.type.name}}</td>
                            <td>
                                <ul>
                                {% for ingr in value.ingredients %}
                                    <li>{{ingr.ingredient.name}}</li>
                                {% endfor %}
                                </ul>
                            </td>
                            <td>
                                <ul>
                                {% for allherbs in value.recipeHerb %}
                                    <li>{{allherbs.herb.name}}</li>
                                {% endfor %}
                                </ul>
                            </td>
                            <td class="change">
                                {% if is_granted('ROLE_ADMIN') %}
                                    <p><a href="{{ path('update_recipe', {slug: value.name}) }}"><i class="fas fa-pencil-alt"></i></a></p>
                                {% endif %}
                                <a href="{{ path('show_recipe', {slug: value.name}) }}"><i class="fas fa-eye"></i></a>
                            </td>

                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/sorttable.js') }}"></script>
{% endblock %} 

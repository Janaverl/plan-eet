{% extends 'boxes.html.twig' %}

{% block body %}
    <div class="contentwrapper">
        <h1>voeg een ingredient toe</h1>
        
        <div class="cardwrapper">
            <div class="w3-card step">
                <h3>Deze waarden zitten al in de database:</h3>
                <input type="text" class="w3-input filterBy" placeholder="zoek een ingredient ...">
                <div class="scrollbox">
                    <ul class="w3-ul">
                        {% for value in values %}
                            <li>{{value.name}}</li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
            <div class="w3-card step generalInformation">
                <h3>algemene info</h3>
                <input type="text" id="name" name="name" class="w3-input" placeholder="naam ingredient">
                <input type="text" id="suggestion" name="suggestion" class="w3-input" placeholder="recept tip (optioneel)">

                <select class="w3-select w3-border" id="unit" name="unit">
                    <option class="selectUnit" value="default" disabled selected>eenheid</option>
                    {% for unit in units %}
                        <option class="selectUnit" value="{{unit.name}}">{{unit.name}}</option>
                    {% endfor %}
                </select>

                <select class="w3-select w3-border" id="rayon" name="rayon">
                    <option class="selectRayon" value="default" disabled selected>rayon</option>
                    {% for rayon in rayons %}
                        <option class="selectRayon" value="{{rayon.name}}">{{rayon.name}}</option>
                    {% endfor %}
                </select>
            </div>

            <!-- confirmation and errors -->
            <div class="w3-card step recipe">
                <button class="confirm">Joepie, alweer een ingredientje bij!</button>
                <ul class="errors"></ul>
                <ul class="success"></ul>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/addIngredient.js') }}"></script>
{% endblock %}

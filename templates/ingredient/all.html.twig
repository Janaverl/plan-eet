{% extends 'boxes.html.twig' %}

{% use 'blocks.html.twig'%}

{% block body %}
    <div class="contentwrapper">
        <h1>bekijk alle ingredienten</h1>
        
        <div class="cardwrapper">
            <div class="w3-card step horScrollbox">
                {% block filtertable %}
                    {{ parent() }}
                {% endblock %}

            {# TODO: responsive table https://css-tricks.com/responsive-data-tables/ #}
                  <table class="w3-table w3-striped w3-bordered" id="tableToSort" width="100%">
                  <thead>
                    <tr class="sortTitles">
                        <th class="sortable">naam ingredient</th>
                        <th class="sortable">eh</th>
                        <th class="sortable">te vinden in rayon</th>
                        <th class="sortable">ingredienttip</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody class="searchable">
                {% for value in values %}
                    <tr>
                        <td>{{value.name}}</td>
                        <td>{{value.unit.name}}</td>
                        <td>{{value.rayon.name}}</td>
                        <td>{{value.suggestion}}</td>
                        <td class="change"><a href="{{ path('ingredients_edit', {slug: value.name}) }}"><i class="fas fa-pencil-alt"></i></a></td>
                    </tr>
                {% endfor %}
                </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/sorttable.js') }}"></script>
{% endblock %} 

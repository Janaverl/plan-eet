{% extends 'boxes.html.twig' %}

{% block body %}
    <div class="contentwrapper">
        <h1>bekijk alle ingredienten</h1>
        
        <div class="cardwrapper">
            <div class="w3-card step">
            <div class="search flex">
            <input type="text" id="searchOne" class="w3-input search" placeholder="zoeken ...">
            <input type="text" id="searchTwo" class="w3-input search" placeholder="zoeken ...">
            <input type="text" id="searchThree" class="w3-input search" placeholder="zoeken ...">
            <input type="text" id="searchFour" class="w3-input search" placeholder="zoeken ...">
            </div>

            {# TODO: responsive table https://css-tricks.com/responsive-data-tables/ #}
                  <table class="w3-table w3-striped w3-bordered" id="allIngredients" width="100%">
                  <thead>
                    <tr class="sortTitles">
                        <th>naam ingredient</th>
                        <th>eenheid</th>
                        <th>te vinden in rayon</th>
                        <th>ingredienttip</th>
                        <th>pas aan</th>
                    </tr>
                    </thead>
                    <tbody class="searchable">
                {% for value in values %}
                    <tr>
                        <td class="name">{{value.name}}</td>
                        <td class="rayon">{{value.unit.name}}</td>
                        <td>{{value.rayon.name}}</td>
                        <td>{{value.suggestion}}</td>
                        <td class="change"><a href="{{ path('update_ingredient', {slug: value.name}) }}">pas aan</a></td>
                    </tr>
                {% endfor %}
                </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/sorttable.js') }}"></script>
{% endblock %} 

{% extends 'boxes.html.twig' %}

{% use 'blocks.html.twig'%}

{% block body %}
    <div class="contentwrapper">
        <h1>{{title}}</h1>
        
        <div class="cardwrapper">
            <div class="w3-card step horScrollbox">
                {% block filtertable %}
                    {{ parent() }}
                {% endblock %}

            {# TODO: responsive table https://css-tricks.com/responsive-data-tables/ #}
                  <table class="w3-table w3-striped w3-bordered" id="tableToSort" width="100%">
                  <thead>
                    <tr class="sortTitles">
                        <th>naam kamp</th>
                        <th>starttijd</th>
                        <th>eindtijd</th>
                        <th>aantal deelnemers</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody class="searchable">
                    {# |sort((a, b) => a.startTime <=> b.startTime) #}
                {% for value in values %}
                    <tr>
                        <td>{{value.name}}</td>
                        <td>{{value.startTime|date("d/m/Y - H:i")}}</td>
                        <td>{{value.endTime|date("d/m/Y - H:i")}}</td>
                        <td>{{value.nrOfParticipants}}</td>
                        <td class="icons"><a href="{{ path('camps_show', {campname: value.name, camp: value.id}) }}"><i class="fas fa-pencil-alt"></i> <br> </a><a href="{{ path('shoppinglists_show', {campid: value.id}) }}"><i class="fas fa-list"></i></a></td>
                    </tr>
                {% endfor %}
                </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/sorttable.js') }}"></script>
{% endblock %} 

{% extends 'boxes.html.twig' %}

{% use 'blocks.html.twig'%}

{% block body %}
    <div class="contentwrapper">
        <h1>bekijk al jouw kampen</h1>
        
        <div class="cardwrapper">
            <div class="w3-card step">
                {% block filtertable %}
                    {{ parent() }}
                {% endblock %}

            {# TODO: responsive table https://css-tricks.com/responsive-data-tables/ #}
                  <table class="w3-table w3-striped w3-bordered" id="allIngredients" width="100%">
                  <thead>
                    <tr class="sortTitles">
                        <th class="sortable">naam kamp</th>
                        <th class="sortable">starttijd</th>
                        <th class="sortable">eindtijd</th>
                        <th class="sortable">aantal deelnemers</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody class="searchable">
                {% for value in values %}
                    <tr>
                        <td>{{value.name}}</td>
                        <td>{{value.startTime|date("d/m/Y - H:i")}}</td>
                        <td>{{value.endTime|date("d/m/Y - H:i")}}</td>
                        <td>{{value.nrOfParticipants}}</td>
                        <td class="change"><a href="{{ path('update_camp', {slug: value.name, camp: value.id}) }}"><i class="fas fa-pencil-alt"></i></a></td>
                    </tr>
                {% endfor %}
                </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/sorttable.js') }}"></script>
{% endblock %} 

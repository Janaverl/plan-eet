{% extends 'boxes.html.twig' %}

{% use 'blocks.html.twig'%}

{% block body %}
    <div class="contentwrapper">

        {# title #}
        <h1>voeg hier je maaltijd toe</h1>

        {# all cards #}
        <div class="cardwrapper">
            <div class="w3-card step">
                <input type="text" id="nameMeal" class="w3-input" placeholder="naam van de maaltijd">
                <p>
                    <label class="switch recipes">
                        <input type="checkbox">
                        <span class="slider"></span>
                    </label>
                    toon enkel geselecteerde recepten
                </p>
                {% block filtertable %}
                    {{ parent() }}
                {% endblock %}
                {% block table_all_recipes %}
                    {{ parent() }}
                {% endblock %}

                <button class="confirm">
                        Sla deze maaltijd op
                </button>
                <ul class="errors"></ul>
                <ul class="success"></ul>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/sorttable.js') }}"></script>
    <script src="{{ asset('js/meal.js') }}"></script>
{% endblock %}
